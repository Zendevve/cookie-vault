{
  "manifest_version": 3,
  "name": "Cookie Vault",
  "version": "1.0.0",
  "description": "Modern, secure cookie backup and restoration tool.",
  "permissions": [
    "cookies",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Cookie Vault"
  },
  "icons": {
    "16": "public/vite.svg",
    "48": "public/vite.svg",
    "128": "public/vite.svg"
  }
}
